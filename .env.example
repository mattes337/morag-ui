# Database Configuration
# Choose either "postgresql" or "mysql" for DATABASE_PROVIDER
DATABASE_PROVIDER="mysql"

# MariaDB Configuration (for Docker Compose)
DB_ROOT_PASSWORD=morag_root_password
DB_NAME=morag
DB_USER=morag_user
DB_PASSWORD=morag_password

# Database URL for Prisma
# For Docker Compose (using service name):
DATABASE_URL="mysql://${DB_USER}:${DB_PASSWORD}@mariadb:3306/${DB_NAME}"

# Alternative configurations:
# For local development (MariaDB running on host):
# DATABASE_URL="mysql://${DB_USER}:${DB_PASSWORD}@localhost:3306/${DB_NAME}"

# PostgreSQL Configuration (alternative)
# DATABASE_URL="postgresql://username:password@localhost:5432/database_name?schema=public"

# Application Configuration
NEXTAUTH_SECRET="your-secret-key-here"
NEXTAUTH_URL="http://localhost:3000"

# API Configuration
API_BASE_URL="http://localhost:8000"

# Authentication Configuration
ENABLE_HEADER_AUTH=false
SSO_HEADER_NAME=X-Remote-User
SSO_EMAIL_HEADER=X-Remote-Email
SSO_NAME_HEADER=X-Remote-Name
SSO_ROLE_HEADER=X-Remote-Role