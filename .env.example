# Database Configuration
# Choose either "postgresql" or "mysql" for DATABASE_PROVIDER
DATABASE_PROVIDER="mysql"

# MariaDB Configuration (for Docker Compose)
DB_ROOT_PASSWORD=morag_root_password
DB_NAME=morag
DB_USER=morag_user
DB_PASSWORD=morag_password

# Database URL for Prisma
# For Docker Compose (using service name):
DATABASE_URL="mysql://${DB_USER}:${DB_PASSWORD}@mariadb:3306/${DB_NAME}"

# Alternative configurations:
# For local development (MariaDB running on host):
# DATABASE_URL="mysql://${DB_USER}:${DB_PASSWORD}@localhost:3306/${DB_NAME}"

# PostgreSQL Configuration (alternative)
# DATABASE_URL="postgresql://username:password@localhost:5432/database_name?schema=public"

# Application Configuration
NEXTAUTH_SECRET="your-secret-key-here"
NEXTAUTH_URL="http://localhost:3000"
JWT_SECRET="your-jwt-secret-key-here"

# Default User & API Key Configuration
# These are used for initial setup and fresh installations
AUTO_SEED_DATABASE=true
DEFAULT_USER_EMAIL="admin@morag.local"
DEFAULT_USER_PASSWORD="admin123"
DEFAULT_USER_NAME="Default Admin"
DEFAULT_API_KEY="default-api-key"
GENERIC_API_KEY="generic-automation-key"

# API Configuration
# Backend MoRAG service URL (server-side only)
MORAG_API_URL="http://localhost:8000"
# Client-side API URL (must be prefixed with NEXT_PUBLIC_)
NEXT_PUBLIC_API_BASE_URL="http://localhost:8000/api"

# Authentication Configuration
ENABLE_HEADER_AUTH=false
SSO_HEADER_NAME=X-Remote-User
SSO_EMAIL_HEADER=X-Remote-Email
SSO_NAME_HEADER=X-Remote-Name
SSO_ROLE_HEADER=X-Remote-Role

# Production Security Configuration
CORS_ORIGINS="https://morag.drydev.de"
RATE_LIMITING_ENABLED=true
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
MAX_FILE_SIZE=104857600
ALLOWED_FILE_TYPES="application/pdf,text/plain,text/markdown"
VIRUS_SCANNING_ENABLED=false

# Database Configuration
DB_MAX_CONNECTIONS=20
DB_CONNECTION_TIMEOUT=30000
DB_QUERY_TIMEOUT=60000
DB_SSL=true

# Logging Configuration
LOG_LEVEL=info
STRUCTURED_LOGGING=true
AUDIT_LOGGING=true
PERFORMANCE_TRACKING=true

# Monitoring Configuration
HEALTH_CHECK_INTERVAL=30000
METRICS_ENABLED=true
ALERTING_ENABLED=false
ALERT_WEBHOOK_URL=""
ALERT_EMAIL_RECIPIENTS=""

# External Services (Optional)
VECTOR_DB_PROVIDER=""
VECTOR_DB_URL=""
VECTOR_DB_API_KEY=""
STORAGE_PROVIDER=""
STORAGE_BUCKET=""
STORAGE_REGION=""
STORAGE_ACCESS_KEY_ID=""
STORAGE_SECRET_ACCESS_KEY=""
EMAIL_PROVIDER=""
EMAIL_HOST=""
EMAIL_PORT=587
EMAIL_USER=""
EMAIL_PASSWORD=""
EMAIL_FROM=""

# Feature Flags
FEATURE_VECTOR_SEARCH=false
FEATURE_ADVANCED_ANALYTICS=false
FEATURE_REALTIME_UPDATES=false
FEATURE_EXPERIMENTAL=false